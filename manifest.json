{
  "manifest_version": 3,
  "name": "Accessibility Scanner",
  "version": "1.0",
  "description": "Find and fix accessibility issues on any page",

  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Open Accessibility Scanner"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
